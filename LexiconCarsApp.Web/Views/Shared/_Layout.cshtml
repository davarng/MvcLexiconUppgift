<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css">
</head>

<body>
    @*Header with nameof to avoid magic strings.*@
    <header>HEADER</header>
    <ul>
        <li>
            <a asp-controller="Cars" asp-action="@nameof(CarsController.Index)">Home</a>
        </li>
        <li>
            <a asp-controller="Cars" asp-action="@nameof(CarsController.Create)">Create car</a>
        </li>
    </ul>
    <div>
        <partial name ="_LoginForm" model = "3"/>
        @*Renders the page that is gotten through the view and displays it in the middle of the layout.*@
        @RenderBody()
    </div>
    <footer>FOOTER</footer>
    @*Renders scripts*@
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js" asp-fallback-src="~/Scripts/Libs/jquery/jquery.min.js" asp-fallback-test="window.jQuery"></script>
    @RenderSection("Scripts", false)
</body>
</html>