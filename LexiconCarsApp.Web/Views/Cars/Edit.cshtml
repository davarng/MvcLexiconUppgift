@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LexiconCarsApp.Web.Models.Car
@using LexiconCarsApp.Web.Controllers

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Car</title>
    <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css">
</head>
<body>
    <h2>Edit Car</h2>

    <form asp-controller="Cars" asp-action="@nameof(CarsController.Edit)">
        <label asp-for="Make"></label>
        <input asp-for="Make" required/>
        <span asp-validation-for="Make"></span>

        <label asp-for="Model"></label>
        <input asp-for="Model" required/>
        <span asp-validation-for="Model"></span>

        <label asp-for="Color"></label>
        <input asp-for="Color" required/>
        <span asp-validation-for="Color"></span>

        <label asp-for="Year"></label>
        <input asp-for="Year" required/>
        <span asp-validation-for="Year"></span>

        <input type="submit" value="Save" />
    </form>
    <div asp-validation-summary="All"></div>
</body>
</html>